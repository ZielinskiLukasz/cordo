{
    "require": {
        "bshaffer/oauth2-server-php": "^1.10",
        "doctrine/migrations": "2.0.x-dev",
        "guzzlehttp/psr7": "^1.5",
        "hassankhan/config": "^2.0",
        "league/tactician": "^1.0",
        "league/tactician-command-events": "^0.6.0",
        "league/tactician-container": "^2.0",
        "league/tactician-logger": "^0.10.0",
        "monolog/monolog": "^1.24",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^6.0",
        "psr/http-server-middleware": "^1.0",
        "relay/relay": "2.x@dev",
        "symfony/dotenv": "^4.2"
    },
    "require-dev": {
        "symfony/var-dumper": "^4.2",
        "phpstan/phpstan": "^0.11.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "System\\": "system",
            "Database\\Migrations\\": "resources\\database\\migrations"
        },
        "files": [
            "system/helper_functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "migration": "doctrine-migrations",
        "test": "phpunit",
        "phpstan": "phpstan analyse system app tests --level max",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
